---
import "../styles/global.css";
import ArrowUpRight from "../components/icons/arrow-up-right.astro";

const projects = [
  {
    name: "Bookmarks",
    description:
      "A personal space for saving, organizing, and retrieving web links.",
    url: "https://bookmarks.franguerrero.dev",
  },
  {
    name: "Stefanos",
    description: "Product catalogue for Stefanos Leather.",
    url: "https://www.stefanosleather.com/",
  },
  {
    name: "Quanticom",
    description: "Website for digital marketing agency.",
    url: "https://quanticom.com.py/",
  },
  {
    name: "Brasa",
    description: "Landing page for Argentinian agency.",
    url: "https://brasa.agency/",
  },
];

const links = [
  {
    name: "Twitter",
    url: "https://x.com/frnguerrero",
  },
  {
    name: "Email",
    url: "mailto:francisco.guerrero.dev@gmail.com",
  },
  {
    name: "Github",
    url: "https://github.com/efeguerrero",
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/juan-francisco-guerrero-16143849/",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <!-- Font import -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />
    <title>Francisco Guerrero</title>
  </head>
  <body>
    <div class="min-h-svh">
      <main class="mx-auto max-w-xl px-4 pb-24 pt-12 sm:pb-24 sm:pt-24">
        <section class="mb-16">
          <h1
            style="animation-delay:calc(1 * var(--base-animation-delay))"
            class="animate-text-fade-in mb-7 text-xl font-semibold text-zinc-100"
          >
            Francisco Guerrero
          </h1>
          <p
            style="animation-delay:calc(2 * var(--base-animation-delay))"
            class="text-zinc-400 animate-text-fade-in"
          >
            I'm a fullstack developer based in Buenos Aires, Argentina.
            Currently working as a product engineer at <span
              ><a
                class="underlnie text-zinc-200 underline decoration-zinc-600 underline-offset-4 sm:hover:decoration-zinc-400"
                target="_blank"
                href="https://www.sidetool.co/">Sidetool</a
              ></span
            >.
          </p>
          <p
            style="animation-delay:calc(3 * var(--base-animation-delay))"
            class="mt-6 text-zinc-400 animate-text-fade-in"
          >
            Passionate about coding, building and music.
          </p>
        </section>

        <section class="mb-16">
          <h2
            style="animation-delay:calc(4 * var(--base-animation-delay))"
            class="mb-0 text-lg font-semibold text-zinc-100 animate-text-fade-in"
          >
            Projects
          </h2>
          <p
            style="animation-delay:calc(5 * var(--base-animation-delay))"
            class="mb-7 text-base text-zinc-400 animate-text-fade-in"
          >
            Freelance or side projects I've built recently.
          </p>
          <ul class="space-y-6">
            {
              projects.map((project,index) => (
                <li
                  style=`animation-delay:calc(${index + 6} * var(--base-animation-delay))`
                  class="space-y-1 animate-text-fade-in"
                >
                  <a
                    target="_blank"
                    href={project.url}
                    class="group flex items-center font-medium text-zinc-200 underline decoration-zinc-600 underline-offset-4 sm:hover:decoration-zinc-400"
                  >
                    {project.name}
                    <span class="ml-1 text-zinc-400 sm:group-hover:text-zinc-200">
                      <ArrowUpRight />
                    </span>
                  </a>
                  <p class="text-sm leading-relaxed text-zinc-400">
                    {project.description}
                  </p>
                </li>
              ))
            }
          </ul>
        </section>
        <section>
          <h2 style="animation-delay:calc(10 * var(--base-animation-delay))" class="mb-4 text-lg font-semibold text-zinc-100 animate-text-fade-in">
            Let's get in touch
          </h2>
          <div class="flex flex-wrap gap-x-4 gap-y-2">
            {
              links.map((link) => (
                <a
                style="animation-delay:calc(11 * var(--base-animation-delay))"
                  target="_blank"
                  href={link.url}
                  class="flex items-center text-zinc-400 sm:hover:text-zinc-100 animate-text-fade-in"
                >
                  <p class="underline decoration-zinc-600 underline-offset-4 sm:hover:decoration-zinc-400">
                    {link.name}
                  </p>
                </a>
              ))
            }
          </div>
        </section>
      </main>
    </div>
  </body>
</html>
